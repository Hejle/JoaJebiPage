@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}
@section Styles {
    <link rel="stylesheet" href="/css/style.css" />
}
<h1>About</h1>
<form method="post" asp-page-handler="About" enctype="multipart/form-data">
    <select onchange="this.form.submit()" asp-for="Who">
        @{
            foreach (var person in @Model.GetPersons())
            {
                <option value="@person">@person.ToString()</option>
            }
        }
    </select>
</form>
<section>
    <div class="col-md-3">
        <div class="profile-img">
            <img src=@Model.Picture class="img-responsive" alt="" />
        </div>
        <!-- Profile Image -->
    </div>
    <div>
        <h1>@Model.FirstName @Model.LastName</h1>
        <span>Software Engineering, Bachelor studerende</span>
        <p>@Model.Description</p>
    </div>
    <div>
        <small>Fødselsdag</small>
        <strong>@Model.Birthday</strong>
    </div>
    <div>
        <small>Nationalitet</small>
        <strong>Danmark</strong>
    </div>
</section>
<section>
    <!-- .experience-work -->
    <div>
        <small>@Model.WorkTime2</small>
        <h3>@Model.WorkTitle2</h3>
        <h4>@Model.WorkPlace2</h4>
        <p>@Model.WorkLocation2</p>
    </div>
    <!-- .experience-work -->
    <div>
        <small>@Model.WorkTime1</small>
        <h3>@Model.WorkTitle1</h3>
        <h4>@Model.WorkPlace1</h4>
        <p>@Model.WorkLocation1</p>
    </div>
    <!-- .section-education -->
    <div>
        <small>@Model.EducationTime3</small>
        <h3>@Model.EducationTitle3</h3>
        <h4>@Model.EducationPlace3</h4>
        <p>@Model.EducationLocation3</p>
    </div>
    <!-- .experience-education -->
    <div>
        <small>@Model.EducationTime2</small>
        <h3>@Model.EducationTitle2</h3>
        <h4>@Model.EducationPlace2</h4>
        <p>@Model.EducationLocation2</p>
    </div>
    <!-- .experience-education -->
    <div>
        <small>@Model.EducationTime1</small>
        <h3>@Model.EducationTitle1</h3>
        <h4>@Model.EducationPlace1</h4>
        <p>@Model.EducationLocation1</p>
    </div>
</section>